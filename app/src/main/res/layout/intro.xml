<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/introText"
        android:layout_width="238dp"
        android:layout_height="250dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="33dp"
        android:background="#00000000"
        android:fontFamily="@font/notosans_bold"
        android:text="제로웨이스트,\n비건을 위한\n맞춤 여행을\n떠나볼까요?"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/introImg"
        android:layout_width="146dp"
        android:layout_height="150dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="251dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/kakaoJoinBtn"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="490dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FEE500"
        android:fontFamily="@font/notosans_bold"
        android:text="카카오 아이디로 계속하기"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/JoinBtn"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="548dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/notosans_bold"
        android:text="이메일로 계속하기"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="648dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/nanumsquare"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:text="제비의 여행"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="676dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/nanumsquare"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="in Seoul"
        android:textColor="#781F1F1F"
        android:textSize="16sp"
        android:translationY="-1.23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>